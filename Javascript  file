// script.js

gsap.registerPlugin(ScrollTrigger);

// Hero Section Animation
gsap.from("#hero h1", {
    duration: 1,
    opacity: 0,
    y: -50,
    ease: "power1.out",
    scrollTrigger: {
        trigger: "#hero",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none reset"
    }
});

